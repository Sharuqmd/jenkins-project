pipeline {
    agent any
    stages {
        stage('checkout') {
            steps {
                git 'https://github.com/Sharuqmd/jenkins-project.git'
            }
        }
        stage('Build') { 
            steps {
                sh 'mvn clean package' 
            }
        }
        stage('docker image') {
            steps{
                sh 'docker build -t img .'
            }
        }
        stage('docker') {
            steps{
                sh 'docker run -d -p 9090:8080 img'
            }
    }
}