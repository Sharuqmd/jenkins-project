pipeline {
    agent any
    tools {
        maven "m3"
    }
    stages {
        stage('checkout') {
            steps {
                git 'https://github.com/Sharuqmd/jenkins-project.git'
            }
        }
        stage('build') {
            steps {
                sh 'mvn clean package'
            }
        }  
        stage('docker file') {
            steps {
                sh 'docker build -t my-app .'
            }
        } 
        stage('docker container') {
            steps {
                sh 'docker run -d -p 9090:8080 --name=app my-app '
            }
        }                
    }
}
